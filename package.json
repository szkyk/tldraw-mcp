{
  "name": "@talhaorak/tldraw-mcp",
  "version": "0.1.1",
  "description": "MCP server for managing local tldraw canvas files (.tldr)",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "tldraw-mcp": "./dist/index.js"
  },
  "scripts": {
    "start": "bun run src/index.ts",
    "dev": "bun --watch src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target node --minify",
    "typecheck": "tsc --noEmit",
    "test": "bun test",
    "prepublishOnly": "bun run build"
  },
  "keywords": [
    "mcp",
    "tldraw",
    "canvas",
    "whiteboard",
    "model-context-protocol",
    "ai",
    "claude"
  ],
  "author": "Talha Orak <talha.orak@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/talhaorak/tldraw-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/talhaorak/tldraw-mcp/issues"
  },
  "homepage": "https://github.com/talhaorak/tldraw-mcp#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  }
}
